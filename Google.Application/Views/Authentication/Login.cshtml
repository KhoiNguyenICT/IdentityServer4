@model LoginDto
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi-VN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/auth.css" rel="stylesheet" />
</head>
<body>
    <div class="main-body">

        <div class="box-medium">
            <div class="logo">
                <img src="~/images/logo.png" style="width: 100%; height: 100%;" />
            </div>
            <p class="box-lead">Welcome back, sign in with your existing account credentials</p>

            <form method="post" asp-controller="Authentication" asp-action="Login">

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter your email address" asp-for="Email">
                    <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary btn-block text-uppercase" onclick="login();">Log me in</button>
                </div>
            </form>

            <div class="account-references">
                Forgot your username or password?
                <a href="">Forgot password?</a>
            </div>
        </div>
    </div>
    <script src="~/libs/jquery.js"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
</body>
</html>